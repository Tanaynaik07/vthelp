<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes - VT Help</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/notes.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="main-container">
        <button class="back-btn" onclick="window.location.href='/'">‚Üê Back to Subjects</button>
        <h1>Notes</h1>

        <% if (notes.length === 0) { %>
            <p>No notes found for this subject.</p>
        <% } else { %>
            <div class="folder-grid">
                <% notes.forEach(note => { %>
                    <div class="folder-item">
                        <div class="folder-icon">
                            <i class="fas fa-folder"></i>
                        </div>
                        <div class="folder-content">
                            <h3><%= note.subjectname %></h3>
                            <p class="topic"><%= note.topic %></p>
                            <p class="upload-date">Uploaded: <%= new Date(note.created_at).toLocaleDateString() %></p>
                            <% if (note.isParts) { %>
                                <% const parts = note.nlink.split(','); %>
                                <div class="parts-list">
                                    <% parts.forEach((part, index) => { %>
                                        <a href="<%= part %>" target="_blank" class="part-link">
                                            <i class="fas fa-file-pdf"></i> Part <%= index + 1 %> of <%= note.totalParts %>
                                        </a>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <a href="<%= note.nlink %>" target="_blank" class="view-link">
                                    <i class="fas fa-file-pdf"></i> View PDF
                                </a>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html> 